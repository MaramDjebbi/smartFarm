<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundneutre"
        tools:context=".dashBoard">

        <TextView
            android:id="@+id/textViewTemperature"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:textColor="#CAD2C5"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="200dp"
            android:text="Température: " />

        <TextView
            android:id="@+id/textViewPluie"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@id/textViewTemperature"
            android:layout_marginStart="16dp"
            android:textColor="#CAD2C5"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:text="Pluie: " />

        <TextView
            android:id="@+id/textViewHumidite"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginStart="200dp"
            android:textColor="#CAD2C5"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="200dp"
            android:text="Humidité: " />

        <TextView
            android:id="@+id/textViewLumiere"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@id/textViewHumidite"
            android:layout_marginStart="200dp"
            android:layout_marginTop="50dp"
            android:textColor="#CAD2C5"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Lumière: " />

